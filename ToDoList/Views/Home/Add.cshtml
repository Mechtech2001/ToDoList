@model ToDo
@{
    ViewData["Title"] = " Add to to-do list";
}
<h2>New Task</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Add" method="post">
    <div class="row mb-2">
        <div class="col-md-2">
            <label asp-for="Name" class="form-label">Name:</label>
        </div>
        <div class="col-md-4">
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="col-md-6">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-2">
            <label asp-for="Description" class="form-label">Description:</label>
        </div>
        <div class="col-md-4">
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="col-md-6">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

      <div class="row mb-2">
        <div class="col-md-2">
            <label asp-for="SprintNumber" class="form-label">Sprint Number:</label>
        </div>
        <div class="col-md-4">
            <input asp-for="SprintNumber" class="form-control" />
        </div>
        <div class="col-md-6">
            <span asp-validation-for="SprintNumber" class="text-danger"></span>
        </div>
    </div>

    <  <div class="row mb-2">
        <div class="col-md-2">
            <label asp-for="PointValue" class="form-label">Point Value:</label>
        </div>
        <div class="col-md-4">
            <input asp-for="PointValue" class="form-control" />
        </div>
        <div class="col-md-6">
            <span asp-validation-for="PointValue" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-2">
            <label asp-for="DueDate" class="form-label">Due Date:</label>
        </div>
        <div class="col-md-4">
            <input asp-for="DueDate" class="form-control" />
        </div>
        <div class="col-md-6">
            <span asp-validation-for="DueDate" class="text-danger"></span>
        </div>
    </div>

      <div class="row mb-2">
        <div class="col-md-2">
            <label asp-for="StatusID" class="form-label">Statue:</label>
        </div>
        <div class="col-md-4">
            <input asp-for="StatusID" class="form-control" />
        </div>
        <div class="col-md-6">
            <span asp-validation-for="StatusID" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
