@model ToDo
@{
    ViewData["Title"] = " Add to to-do list";
}
<h2>New Task</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Add" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description:</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="SprintNumber" class="form-label">Sprint:</label>
        <input asp-for="SprintNumber" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="PointValue" class="form-label">Point Value:</label>
        <input asp-for="PointValue" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="DueDate" class="form-label">Due Date:</label>
        <input asp-for="DueDate" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="StatusID" class="form-label">Status:</label>
        <select asp-for="StatusID" class="form-select" asp-items="@(new SelectList(ViewBag.Statuses, "StatusId", "Name"))"></select>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
